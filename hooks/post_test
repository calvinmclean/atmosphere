#!/bin/bash

set -x

echo $SOURCE_BRANCH
echo $SOURCE_COMMIT
echo $COMMIT_MSG
echo $DOCKER_REPO
echo $DOCKERFILE_PATH
echo $DOCKER_TAG
echo $IMAGE_NAME
echo $DOCKER_REPO:${SOURCE_BRANCH}_${SOURCE_COMMIT:0:7}

export NEW_IMAGE_NAME=${SOURCE_BRANCH}_${SOURCE_COMMIT:0:7}

docker tag $IMAGE_NAME $DOCKER_REPO:$NEW_IMAGE_NAME
docker image ls
docker push $DOCKER_REPO:$NEW_IMAGE_NAME
